<Window x:Class="EventManagerClient.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="350" Width="400">
	<Grid>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
			<Grid>
				<!-- TextBox с Watermark -->
				<TextBox x:Name="UsernameTextBox" Width="200" Margin="0,5,0,0" VerticalAlignment="Center" TextChanged="UsernameTextBox_TextChanged"/>

				<!-- Watermark, который будет отображаться, пока поле пустое -->
				<TextBlock x:Name="Watermark" HorizontalAlignment="Left" VerticalAlignment="Center"
                           Foreground="Gray" Text="Логин" Margin="5,0,0,0" IsHitTestVisible="False"/>
			</Grid>

			<PasswordBox x:Name="PasswordBox" Width="200" Margin="0,10,0,0"/>
			<PasswordBox x:Name="ConfirmPasswordBox" Width="200" Margin="0,10,0,0"/>
			<Button Content="Зарегистрироваться" Width="200" Click="RegisterButton_Click"/>
		</StackPanel>
	</Grid>
</Window>